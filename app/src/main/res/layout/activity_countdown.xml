<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CountdownActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="411dp"
            android:layout_height="731dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/days_txt_countdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="177dp"
                android:layout_marginEnd="177dp"
                android:fontFamily="serif"
                android:text="20"
                android:textColor="#7A7A7A"
                android:textSize="50dp" />

            <TextView
                android:id="@+id/daysLeft_txt_countdown"
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="40dp"
                android:fontFamily="serif"
                android:gravity="center_horizontal"
                android:text="Days"
                android:textColor="#7A7A7A"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/hours_txt_countdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="177dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="178dp"
                android:fontFamily="serif"
                android:text="18"
                android:textColor="#7A7A7A"
                android:textSize="50dp" />

            <TextView
                android:id="@+id/countdown_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="185dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="182dp"
                android:layout_marginBottom="36dp"
                android:fontFamily="serif"
                android:text="Hours"
                android:textColor="#7A7A7A"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/minutes_txt_countdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="177dp"
                android:layout_marginTop="37dp"
                android:layout_marginEnd="178dp"
                android:fontFamily="serif"
                android:text="43"
                android:textColor="#7A7A7A"
                android:textSize="50dp" />

            <TextView
                android:id="@+id/countdown_minutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="178dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="175dp"
                android:layout_marginBottom="31dp"
                android:fontFamily="serif"
                android:text="Minutes"
                android:textColor="#7A7A7A"
                android:textSize="15dp" />


            <TextView
                android:id="@+id/seconds_txt_countdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="177dp"
                android:layout_marginTop="31dp"
                android:layout_marginEnd="178dp"
                android:fontFamily="serif"
                android:text="53"
                android:textColor="#7A7A7A"
                android:textSize="50dp" />


            <TextView
                android:id="@+id/countdown_seconds"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginStart="177dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="176dp"
                android:fontFamily="serif"
                android:text="Seconds"
                android:textColor="#7A7A7A"
                android:textSize="15dp" />


            <TextView
                android:id="@+id/until_launch_text_view"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="52dp"
                android:gravity="center_horizontal"
                android:text="Until Launch"
                android:textColor="#000000"
                android:textSize="40dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/button_to_live"
        android:layout_width="101dp"
        android:layout_height="52dp"
        android:layout_marginStart="155dp"
        android:layout_marginTop="74dp"
        android:layout_marginEnd="155dp"
        android:text="Button"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/until_launch_text_view" />
</LinearLayout>